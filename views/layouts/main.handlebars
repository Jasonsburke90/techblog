<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Techblog</title>
    {{! <link rel='stylesheet' type='text/css' href='/css/style.css' /> }}
    <link href='bootstrap.bundle.min.js bootstrap.bundle.js' />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous' />
  </head>

  <body>
    <header>
      <h1 class='text-center'>Welcome to the Techblog!</h1>
    </header>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <a href='/' class='nav-item nav-link'>Home</a>
      {{#if loggedIn}}
        <a href='/profile' class='nav-item nav-link'>Dashboard</a>
        <button id='logout' class='nav-item nav-link'>Logout</button>
      {{else}}
        <a href='/login'>Login</a>
      {{/if}}
    </nav>
    <main>
      <aside>
        <h2>Enjoy the blog posts!</h2>
      </aside>
      <div class='gallery'>
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>