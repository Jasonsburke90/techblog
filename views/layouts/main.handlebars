<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Techblog</title>
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
  </head>

  <body>
    <header>
      <h1>Welcome to the Techblog!</h1>
    </header>
    <nav>
      <a href='/'>Home</a>
      {{#if loggedIn}}
        <a href='/profile' class='btn-no-style'>Dashboard</a>
        <button id='logout' class='btn-no-style'>Logout</button>
      {{else}}
        <a href='/login'>Login</a>
      {{/if}}
    </nav>
    <main>
      <aside>
        <h2>Enjoy the blog posts!</h2>
      </aside>
      <div class='gallery'>
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>