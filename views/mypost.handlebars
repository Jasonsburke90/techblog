<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class='btn btn-primary' id='edit-btn' data-id='{{id}}'>Edit this Post!</button>
  </p>
  <div class='col-md-6' id='edit-container' style='display: none;'>
    <form class='form edit-post-form'>
      <div class='form-group'>
        <label for='post-title'>post title:</label>
        <input class='form-input' type='text' id='post-title' name='post-title' />
      </div>
      <div class='form-group'>
        <label for='post-contents'>description:</label>
        <textarea class='form-input' id='post-contents' name='post-contents'></textarea>
      </div>
      <div class='form-group'>
        <button class='btn btn-primary post-edit-submit' data-id='{{id}}'>Submit edit</button>
      </div>
    </form>
  </div>
  <p>
    <button class='btn btn-sm btn-danger post-delete-btn' data-id='{{id}}'>DELETE THIS POST</button>
  </p>
  <script src='/js/mypost.js'></script>
</div>