<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class='row m-3'>
    <div class='col-md-4'>
      <h2>

        <a href='/post/{{post.id}}'>{{post.title}}</a>
      </h2>
      <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div class='col-md-8'>
      <p>
        {{post.contents}}
      </p>
    </div>
  </div>
{{/each}}